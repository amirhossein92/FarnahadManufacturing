<UserControl x:Class="FarnahadManufacturing.Control.Base.UserControl.AddEditDeleteRefreshButtonListUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarnahadManufacturing.Control.Base.UserControl"
             xmlns:layout="clr-namespace:FarnahadManufacturing.Control.Base.Layout"
             xmlns:buttons="clr-namespace:FarnahadManufacturing.Control.Base.Buttons"
             mc:Ignorable="d"  Height="22" Width="150">
    <layout:FmHorizontalLayoutGroup>
        <layout:FmLayoutItem>
            <buttons:FmMiniAddSimpleButton Click="AddButtonOnClick"/>
        </layout:FmLayoutItem>
        <layout:FmLayoutItem>
            <buttons:FmMiniEditSimpleButton Click="EditButtonOnClick"/>
        </layout:FmLayoutItem>
        <layout:FmLayoutItem>
            <buttons:FmMiniDeleteSimpleButton Click="DeleteButtonOnClick"/>
        </layout:FmLayoutItem>
        <layout:FmLayoutItem>
            <buttons:FmMiniRefreshSimpleButton Click="RefreshButtonOnClick"/>
        </layout:FmLayoutItem>
    </layout:FmHorizontalLayoutGroup>
</UserControl>
