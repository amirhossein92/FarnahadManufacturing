<userControl:FilterUserControlBase x:Class="FarnahadManufacturing.UI.UserControls.Configuration.UcCarrier"
                             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                             xmlns:local="clr-namespace:FarnahadManufacturing.UI.UserControls.Configuration"
                             xmlns:userControl="clr-namespace:FarnahadManufacturing.UI.Base.UserControl"
                             xmlns:dxdo="http://schemas.devexpress.com/winfx/2008/xaml/docking"
                             xmlns:dxlc="http://schemas.devexpress.com/winfx/2008/xaml/layoutcontrol"
                             xmlns:layout="clr-namespace:FarnahadManufacturing.UI.Base.Layout"
                             xmlns:input="clr-namespace:FarnahadManufacturing.UI.Base.Input"
                             xmlns:buttons="clr-namespace:FarnahadManufacturing.UI.Base.Buttons"
                             xmlns:gridControl="clr-namespace:FarnahadManufacturing.UI.Base.GridControl"
                             xmlns:dxg="http://schemas.devexpress.com/winfx/2008/xaml/grid"
                             xmlns:label="clr-namespace:FarnahadManufacturing.UI.Base.Label"
                             xmlns:dxe="http://schemas.devexpress.com/winfx/2008/xaml/editors"
                             mc:Ignorable="d"
                             d:DesignHeight="450" d:DesignWidth="800">
    <dxdo:DockLayoutManager>
        <dxdo:LayoutGroup>
            <layout:FmFilterLayoutPanel ItemWidth="*">
                <dxlc:LayoutGroup Orientation="Vertical">
                    <dxlc:LayoutItem Label="عنوان: " LabelPosition="Left" HorizontalContentAlignment="Right">
                        <input:FmTextEdit x:Name="SearchTitleTextEdit" Width="125" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem Label="وضعیت: " LabelPosition="Left" HorizontalContentAlignment="Right">
                        <input:FmComboBoxEdit x:Name="SearchStatusComboBoxEdit" Width="100" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem HorizontalContentAlignment="Right">
                        <buttons:FmSimpleButton Content="جست و جو"
                                                Click="SearchButtonOnClick" />
                    </dxlc:LayoutItem>
                    <dxlc:LayoutItem VerticalAlignment="Stretch">
                        <gridControl:FmSearchGridControl x:Name="SearchGridControl"
                                                         MouseDoubleClick="SearchGridControlOnMouseDoubleClick">
                            <gridControl:FmSearchGridControl.Columns>
                                <dxg:GridColumn Header="عنوان" FieldName="Title" ReadOnly="True" Width="75" />
                                <dxg:GridColumn Header="توضیحات" FieldName="Description" ReadOnly="True" Width="75" />
                            </gridControl:FmSearchGridControl.Columns>
                        </gridControl:FmSearchGridControl>
                    </dxlc:LayoutItem>
                    <dxlc:LayoutGroup>
                        <dxlc:LayoutItem HorizontalContentAlignment="Left">
                            <buttons:FmSimpleButton x:Name="PreviousPageButton" Content="قبلی"
                                                    Click="PreviousPageButtonOnClick" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem HorizontalContentAlignment="Center">
                            <label:FmLabel x:Name="RecordsCountFmLabel" Text="تعداد رکوردها" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem HorizontalContentAlignment="Right">
                            <buttons:FmSimpleButton x:Name="NextPageButton" Content="بعدی"
                                                    Click="NextPageButtonOnClick" />
                        </dxlc:LayoutItem>
                    </dxlc:LayoutGroup>
                    <dxlc:LayoutItem HorizontalContentAlignment="Right">
                        <buttons:FmSimpleButton Content="نمایش" Width="75"
                                                Click="ViewButtonOnClick" />
                    </dxlc:LayoutItem>
                </dxlc:LayoutGroup>
            </layout:FmFilterLayoutPanel>
            <dxdo:DocumentPanel ItemWidth="4*">
                <dxlc:LayoutControl Orientation="Vertical">
                    <layout:FmHeaderLayoutGroup x:Name="FmHeaderLayoutGroup" HeaderTitle="پیک"/>
                    <dxlc:LayoutGroup x:Name="MainLayoutGroup" Orientation="Vertical" IsEnabled="False">
                        <dxlc:LayoutItem Label="عنوان: ">
                            <input:FmTextEdit x:Name="TitleTextEdit" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="کد استاندارد پیک: ">
                            <input:FmTextEdit x:Name="ScacTextEdit"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Label="توضیحات: " LabelPosition="Top">
                            <input:FmMultiLineTextEdit x:Name="DescriptionTextEdit" />
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem>
                            <dxe:CheckEdit x:Name="IsActiveCheckEdit" Content="فعال"/>
                        </dxlc:LayoutItem>
                        <dxlc:LayoutItem Background="LightGray" Height="20" Label="لیست خدمات"/>
                        <dxlc:LayoutGroup>
                            <dxlc:LayoutItem VerticalAlignment="Stretch">
                                <dxg:GridControl x:Name="CarrierServiceGridControl">
                                    <dxg:GridControl.Columns>
                                        <dxg:GridColumn Header="عنوان" FieldName="Title"/>
                                        <dxg:GridColumn Header="کد" FieldName="Code"/>
                                    </dxg:GridControl.Columns>
                                </dxg:GridControl>
                            </dxlc:LayoutItem>
                            <dxlc:LayoutGroup Orientation="Vertical" Width="40">
                                <dxlc:LayoutItem>
                                    <buttons:FmSimpleButton x:Name="AddItemButton" Content="+"
                                                            Click="AddItemButtonOnClick"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem>
                                    <buttons:FmSimpleButton x:Name="EditItemButton" Content="/" 
                                                            Click="EditItemButtonOnClick"/>
                                </dxlc:LayoutItem>
                                <dxlc:LayoutItem>
                                    <buttons:FmSimpleButton x:Name="DeleteItemButton" Content="-" 
                                                            Click="DeleteItemButtonOnClick"/>
                                </dxlc:LayoutItem>
                            </dxlc:LayoutGroup>
                        </dxlc:LayoutGroup>
                    </dxlc:LayoutGroup>
                </dxlc:LayoutControl>
            </dxdo:DocumentPanel>
        </dxdo:LayoutGroup>
    </dxdo:DockLayoutManager>
</userControl:FilterUserControlBase>