<userControl:UserControlBase x:Class="FarnahadManufacturing.Control.Base.UserControl.AddEditDeleteListUserControl"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:layout="clr-namespace:FarnahadManufacturing.Control.Base.Layout"
                 xmlns:buttons="clr-namespace:FarnahadManufacturing.Control.Base.Buttons"
                 xmlns:userControl="clr-namespace:FarnahadManufacturing.Control.Base.UserControl"
                 mc:Ignorable="d" Width="50">
    <layout:FmVerticalLayoutGroup>
        <layout:FmLayoutItem>
            <buttons:FmMiniAddSimpleButton Click="AddItemButtonOnClick"/>
        </layout:FmLayoutItem>
        <layout:FmLayoutItem>
            <buttons:FmMiniEditSimpleButton Click="EditItemButtonOnClick"/>
        </layout:FmLayoutItem>
        <layout:FmLayoutItem>
            <buttons:FmMiniDeleteSimpleButton Click="DeleteItemButtonOnClick"/>
        </layout:FmLayoutItem>
    </layout:FmVerticalLayoutGroup>
</userControl:UserControlBase>
