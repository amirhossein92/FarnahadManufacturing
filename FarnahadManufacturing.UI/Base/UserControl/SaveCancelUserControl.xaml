<UserControl x:Class="FarnahadManufacturing.UI.Base.UserControl.SaveCancelUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FarnahadManufacturing.UI.Base.UserControl"
             xmlns:layout="clr-namespace:FarnahadManufacturing.UI.Base.Layout"
             xmlns:buttons="clr-namespace:FarnahadManufacturing.UI.Base.Buttons"
             mc:Ignorable="d" HorizontalAlignment="Stretch">
    <layout:FmHorizontalLayoutGroup VerticalAlignment="Bottom">
        <layout:FmLayoutItem>
            <buttons:FmSaveSimpleButton Click="SaveButtonOnClick" />
        </layout:FmLayoutItem>
        <layout:FmLayoutItem>
            <buttons:FmCancelSimpleButton Click="CancelButtonOnClick" />
        </layout:FmLayoutItem>
    </layout:FmHorizontalLayoutGroup>
</UserControl>
