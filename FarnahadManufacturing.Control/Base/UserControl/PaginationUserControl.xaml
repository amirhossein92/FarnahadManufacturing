<userControl:UserControlBase x:Class="FarnahadManufacturing.Control.Base.UserControl.PaginationUserControl"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                 xmlns:layout="clr-namespace:FarnahadManufacturing.Control.Base.Layout"
                 xmlns:buttons="clr-namespace:FarnahadManufacturing.Control.Base.Buttons"
                 xmlns:label="clr-namespace:FarnahadManufacturing.Control.Base.Label"
                 xmlns:userControl="clr-namespace:FarnahadManufacturing.Control.Base.UserControl"
                 mc:Ignorable="d"  Height="Auto">
    <layout:FmHorizontalLayoutGroup Height="Auto">
        <layout:FmLayoutItem HorizontalContentAlignment="Left">
            <buttons:FmMiniPreviousSimpleButton Click="PreviousPageButtonOnClick" />
        </layout:FmLayoutItem>
        <layout:FmLayoutItem HorizontalContentAlignment="Center">
            <label:FmLabel x:Name="RecordsCountFmLabel" Text="تعداد رکوردها" />
        </layout:FmLayoutItem>
        <layout:FmLayoutItem HorizontalContentAlignment="Right">
            <buttons:FmMiniNextSimpleButton Click="NextPageButtonOnClick" />
        </layout:FmLayoutItem>
    </layout:FmHorizontalLayoutGroup>
</userControl:UserControlBase>
